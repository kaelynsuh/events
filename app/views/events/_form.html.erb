<%= form_for(@event) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location, size: 30 %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.number_field :price, size: 6 %>
  </p>
  <p>
    <%= f.label :starts_at %>
    <%= f.datetime_select :starts_at %>
  </p>
  <p>
    <%= f.label :image_file_name%>
    <%= f.text_field :image_file_name, size: 30,
        placeholder: "GIF, JPG, or PNG file name" %>
  </p>
  <p>
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </p>

  <p>
    <%= f.submit %>
    <%= link_to "Cancel", events_path %>
  </p>

<% end %>
